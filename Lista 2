//EXERCÍCIO 2
#include <stdio.h>

//marina cristini

float mediaTurma(int numeroAlunos) {
   
    float soma = 0.0, nota;

    for (int i = 0; i < numeroAlunos; i++) {
        printf("Digite a nota do aluno %d: ", i + 1);
        scanf("%f", &nota);
        soma += nota;
    }

    return soma / numeroAlunos; 
}

float mediaEscola(int numeroTurmas) {
  
    float somaMediaTurmas = 0.0;

    for (int i = 0; i < numeroTurmas; i++) {
        int numAlunos;
        printf("Digite o número de alunos da turma %d: ", i + 1);
        scanf("%d", &numeroAlunos);
        
        float media = mediaTurma(numeroAlunos);
        printf("A média da turma %d é: %.2f\n", i + 1, media);
        
        somaMediaTurmas += media; 
    }

    return somaMediaTurmas / numeroTurmas; 
}

int main() {
    int numeroTurmas;
    printf("Digite o número de turmas: ");
    scanf("%d", &numeroTurmas);
    
    float mediaGeral = mediaEscola(numeroTurmas);
    printf("A média geral da escola é: %.2f\n", mediaGeral);

    return 0;
}

//EXERCÍCIO 3

#include <stdio.h>

//marina cristini

int fibonacci(int n) {
   
    if (n <= 0) return 0;
    if (n == 1) return 1;

    int a = 0, b = 1, c;
    for (int i = 2; i <= n; i++) {
        c = a + b; 
        a = b;
        b = c;
    }
    return b; 
}

int main() {
    int n;
    printf("Digite um valor: ");
    scanf("%d", &n);
    
    int resultado = fibonacci(n);
    printf("O resultado é: %d\n", n, resultado);

    return 0;
}


//EXERCÍCIO 5
Código Fonte:
#include <stdio.h>

//marina cristini

int soma(int a, int b);

